.preload
  *
    opacity 0
    -webkit-transition none !important
    -moz-transition none !important
    -ms-transition none !important
    -o-transition none !important

.no_animations
  animation none
  opacity 1
    

/** KEYFRAMES **/
  
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% { 
    transform: rotate(360deg);
  }
}
  
@keyframes show {
  0% {
    opacity 0;
  }
  100% {
    opacity 1;
  }
}

@keyframes left_show {
  0% {
    transform translateX(-40px);
    opacity: 0;
  }
  100% {
    transform translateX(0px);
    opacity: 1;
  }
}

@keyframes up_show {
  0% {
    transform translateY(60px);
    opacity: 0;
  }
  100% {
    transform translateY(0px);
    opacity: 1;
  }
}

@keyframes down_show {
  0% {
    transform translateY(-20px);
    opacity: 0;
  }
  100% {
    transform translateY(0px);
    opacity: 1;
  }
}

/** LOADER **/

.loader
  animation-name spin 
  animation-duration 1s
  animation-iteration-count infinite

/** AFTER LOADING **/

header
  opacity 0
  animation-name show
  animation-delay 0.5s
  animation-duration 1s
  animation-fill-mode forwards
  
.intro
  img
    opacity 0
    animation-name up_show
    animation-delay 0.4s
    animation-duration 0.5s
    animation-fill-mode forwards
    
  h1
    opacity 0
    animation-name left_show
    animation-delay 0.6s
    animation-duration 0.5s
    animation-fill-mode forwards
    
  .intro_line_left
  .intro_line_right
  .intro_line_up
  .intro_line_down
    opacity 0
    animation-name show
    animation-delay 0.7s
    animation-duration 0.5s
    animation-fill-mode forwards
  
  .texts
    for row in 1 2 3
      :nth-child({row})
        opacity 0
        animation-name down_show
        animation-delay 0.3s * row
        animation-duration 0.2s * row
        animation-fill-mode forwards
  
.description
.instruments
  opacity 0
  animation-name up_show
  animation-delay 0.7s
  animation-duration 0.5s
  animation-fill-mode forwards
  
.gallery
  .gallery_title
    opacity 0
    animation-name left_show
    animation-delay 0.8s
    animation-duration 0.5s
    animation-fill-mode forwards
  
  .img-container
    opacity 0
    animation-name show
    animation-delay 0.8s
    animation-duration 0.1s
    animation-fill-mode forwards
  
/** IMAGE ACTIONS **/

.gallery
  .gallery_display
    .img_container
      &:hover
        .img_actions
          display block