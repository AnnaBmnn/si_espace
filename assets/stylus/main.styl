$black = #212121
$white = #fefefe
$orange = #ffc371
$red = #ff5f6d

@font-face
  font-family 'Oxfam TSTAR PRO'
  src url('../fonts/OxfamTSTARPRO-Medium.eot')
  src url('../fonts/OxfamTSTARPRO-Medium.eot?#iefix') format('embedded-opentype'),
    url('../fonts/OxfamTSTARPRO-Medium.woff2') format('woff2'),
    url('../fonts/OxfamTSTARPRO-Medium.woff') format('woff'),
    url('../fonts/OxfamTSTARPRO-Medium.ttf') format('truetype'),
    url('../fonts/OxfamTSTARPRO-Medium.svg#OxfamTSTARPRO-Medium') format('svg')
  font-style normal

@font-face
  font-family 'Oxfam TSTAR PRO Headline'
  src url('../fonts/OxfamTSTARPRO-Headline.eot')
  src url('../fonts/OxfamTSTARPRO-Headline.eot?#iefix') format('embedded-opentype'),
    url('../fonts/OxfamTSTARPRO-Headline.woff2') format('woff2'),
    url('../fonts/OxfamTSTARPRO-Headline.woff') format('woff'),
    url('../fonts/OxfamTSTARPRO-Headline.ttf') format('truetype'),
    url('../fonts/OxfamTSTARPRO-Headline.svg#OxfamTSTARPRO-Medium') format('svg')
  font-style normal

@import 'form'
@import 'animations'
@import 'modal'
@import url('https://fonts.googleapis.com/css?family=Roboto')

body
  background-color $white
  font-family 'Oxfam TSTAR PRO'
  overflow-y overlay

.container
  padding 20px 150px


/** LOADER **/  

.loader
  position fixed
  top 300px
  left 600px
  border 5px solid $white
  border-top 5px solid $red
  border-bottom 2px solid $red
  border-radius 50px
  width 80px
  height 80px


/** SCROLLBAR **/

::-webkit-scrollbar
  position fixed
  width 3px
  background-color $white

::-webkit-scrollbar-thumb
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,.3)
  background-color $red


/** BACK TO TOP **/

.back_top
  display none
  position fixed
  bottom 20px
  right 52px
  background-color $red
  width 40px
  height 40px
  transition all 0.3s ease

  img
    width 20px
    height 20px
    margin 10px


/** HEADER **/

header

  nav
    position relative
    padding 20px 150px

    #home
      font-family 'Oxfam TSTAR PRO Headline'
      font-size 22px
      font-weight 800

      img
        height 17px
        width auto

    a
      text-decoration none
      color $black
      font-size 15px
      font-weight 700

    div
      display inline-block
      position absolute
      top 23px
      right 150px

      a
        margin-left 30px

      #gallery
        color $red
        font-weight 800


/** INTRO COVER **/

.intro
  position relative
  margin-bottom 80px

  h1
    position absolute
    top 130px
    left -78px
    z-index 2
    font-family 'Oxfam TSTAR PRO Headline'
    color $black
    font-size 72px
    font-weight 800

    em
      color $white

  .intro_line_left
    position absolute
    top 215px
    left -80px
    width 100px
    height 1px
    border-bottom 2px solid $black 

  .intro_line_right
    position absolute
    top 215px
    left 0
    z-index 2
    width 100px
    height 1px
    border-bottom 2px solid $white

  span
    z-index 2
    color $white
    font-weight 600

  #discover
    position absolute
    top 210px
    left 110px

  #explore
    position absolute
    top 235px
    left 110px

  #live
    position absolute
    top 260px
    left 110px

  .intro_line_up
    position absolute
    bottom 0
    left 50%
    z-index 2
    width 1px
    height 60px
    border-left 2px solid $white 

  .intro_line_down
    position absolute
    bottom -57px
    left 50%
    z-index 2
    width 1px
    height 60px
    border-left 2px solid $black

  img
    max-width 100%


/** DESCRIPTION **/

.description
  position relative
  padding 0 150px
  margin-bottom 140px
  display flex
  justify-content space-around
  align-items center

  .description_image
    position relative

    h2
      position absolute
      top -34px
      left 10px
      font-family 'Oxfam TSTAR PRO Headline'
      font-size 36px
      font-weight 800
      color $red

      em
        color $white

    img
      width 250px

  .description_text
    padding 0 25px
    width 500px

    h3
      font-family 'Oxfam TSTAR PRO'
      font-size 22px
      font-weight 600
      margin-bottom 20px

    p
      font-family 'Roboto'
      font-size 12px
      line-height 16px

  .description_line_down
    position absolute
    top 105%
    left 50%
    z-index 2
    width 1px
    height 100px
    border-left 2px solid $black


/** INSTRUMENTS **/

.instruments
  position relative
  padding 0 150px
  margin-bottom 140px
  display flex
  justify-content space-around
  align-items center

  .instruments_image
    position relative

    h2
      position absolute
      top -34px
      left 10px
      font-family 'Oxfam TSTAR PRO Headline'
      font-size 36px
      font-weight 800
      color $orange

      em
        color $white

    img
      width 250px

  .instruments_text
    padding 0 25px
    width 500px

    h3
      font-family 'Oxfam TSTAR PRO'
      font-size 22px
      font-weight 600
      margin-bottom 20px

    p
      font-family 'Roboto'
      font-size 12px
      line-height 16px

  .instruments_line_down
    position absolute
    top 105%
    left 50%
    z-index 2
    width 1px
    height 100px
    border-left 2px solid $black


/** GALLERY **/

.gallery

  .gallery_title
    text-align center
    margin-bottom 20px

    h2
      display inline-block
      font-family 'Oxfam TSTAR PRO Headline'
      font-size 36px
      font-weight 800
      padding-bottom 10px
      border-bottom 2px solid $orange

  .gallery_display

    .img_container
      display inline-block
      position relative
      width 323px
      height 323px

      .img_img
        width 100%
        height 100%

  .add_popup
    display none
    position fixed
    bottom 0
    left 50% - 10px
    z-index 10
    width 250px
    padding 10px 20px
    background-color $orange
    text-align center
    font-family 'Oxfam TSTAR PRO Headline'
    font-size 14px
    color $white