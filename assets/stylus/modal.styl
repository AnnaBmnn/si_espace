.gallery
  .gallery_display
    .img_actions
      display none
      position absolute
      background-image linear-gradient(
  rgba(255, 195, 113, 0.5) 0%, rgba(255, 95, 109, 0.5) 100%)
      width 100%
      height 100%
      cursor pointer
      
      .corner_top_left
        position absolute
        top 10px
        left 10px
        width 30px
        height 30px
        border-top 2px solid $white
        border-left 2px solid $white
        
      .corner_top_right
        position absolute
        top 10px
        right 10px
        width 30px
        height 30px
        border-top 2px solid $white
        border-right 2px solid $white
        
      .corner_bottom_right
        position absolute
        bottom 10px
        right 10px
        width 30px
        height 30px
        border-bottom 2px solid $white
        border-right 2px solid $white
        
      .corner_bottom_left
        position absolute
        bottom 10px
        left 10px
        width 30px
        height 30px
        border-bottom 2px solid $white
        border-left 2px solid $white
        
      .img_plus
        width 150px
        display inline-block
        position absolute
        bottom 20px
        left "calc(50% - %s)" % (@width/2)
        text-align center
        color $white
        font-size 12px
        font-weight 500
        
    .modal
      display none
      position fixed
      z-index 10
      left 0
      top 0
      color $white
      padding 100px 180px
      width 100%
      height 100%
      background-color rgba(0,0,0,0.8)
      transition all 2s ease
      
      .line_close
        position fixed
        top 115px
        right 0
        width 175px
        border-bottom 2px solid $red
      
      .modal_close
        position fixed
        top 90px
        right 180px
        font-family 'Oxfam TSTAR PRO Headline'
        font-size 50px
        font-weight 800
        color $red
        cursor pointer
        transform rotate(90deg)
        
      .modal_content
        display flex
        justify-content space-around
        align-items center
        
        .modal_img
          width 100%
          max-width 500px
          padding 5px 5px 5px 10px
          border-left 2px solid $red
        
        .modal_infos
          width 450px
          margin-left 20px
          
          h3
            font-family 'Oxfam TSTAR PRO Headline'
            font-size 30px
            font-weight 800
            margin-bottom 10px
            
            em
              color $orange
          
          li
            font-family 'Roboto'
            margin-bottom 10px
			  
          .add_button
              display inline-block
              margin-top 30px
              padding 5px 10px
              color $red
              font-size 14px
              cursor pointer
              border 1px solid $red

              a
                text-decoration none

              &:hover
                background-color $red
                color $white

            .twitter
              text-decoration none
              margin-top 30px
              margin-left 30px
              padding 5px 10px
              color $white
              font-family Arial
              font-style normal
              font-weight bold
              font-size 14px
              background-color #4099ff
              border-radius 5px
              cursor pointer

              img
                height 12px
                width auto
                margin-left 5px