.gallery
  .gallery_display
    .img_actions
      display none
      position absolute
      background-image linear-gradient(
  rgba(255, 195, 113, 0.5) 0%, rgba(255, 95, 109, 0.5) 100%)
      width 100%
      height 100%
      cursor pointer
      
      .corner_top_left
        position absolute
        top 10px
        left 10px
        width 30px
        height 30px
        border-top 2px solid $white
        border-left 2px solid $white
        
      .corner_top_right
        position absolute
        top 10px
        right 10px
        width 30px
        height 30px
        border-top 2px solid $white
        border-right 2px solid $white
        
      .corner_bottom_right
        position absolute
        bottom 10px
        right 10px
        width 30px
        height 30px
        border-bottom 2px solid $white
        border-right 2px solid $white
        
      .corner_bottom_left
        position absolute
        bottom 10px
        left 10px
        width 30px
        height 30px
        border-bottom 2px solid $white
        border-left 2px solid $white
        
      .img_plus
        display inline-block
        position absolute
        bottom 144px
        left 121px
        text-align center
        padding 0 30px
        color $white
        font-size 30px
        font-weight 500
        border 2px solid $white